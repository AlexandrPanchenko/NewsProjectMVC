@model IEnumerable<NewsDotNet.DomainModel.Entities.Article>

@{

}
<div class="wrap">
    <div id="main" role="main">
        <div class="container">
            @if (Model.Count() == 0)
            { <div class="alert alert-info">По вашему запросу ничего не найдено</div>}
            else{<h1>По Вашему запросу найдено @Model.Count() статей: </h1>
                <ul class="list-group">
                    @foreach (var article in Model)
                    {
                        @Html.Partial("ArchiveArticlePartial", article)                   
                    }
                 </ul>
            }
        </div>
    
    </div>
</div>

