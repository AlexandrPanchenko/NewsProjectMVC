@using NewsDotNet.WebUI.Infrastracture
@model IEnumerable<NewsDotNet.DomainModel.Entities.Article>

@{
    ViewBag.Title = "Удаленные статьи";
}


<div class="container">
       <h2>Удаленные статьи</h2>
    @if (@Model.Count() == 0)
{
    <div class="alert alert-info">Нет статей для отображения</div>
}

    <a href="~/Areas/Admin/Views/AdminArticles/DeletedArticles.cshtml">~/Areas/Admin/Views/AdminArticles/DeletedArticles.cshtml</a>
@foreach (var article in Model)
{
    <div class="panel panel-info" onclick="location.href='@Url.Action("Show", "Articles", new {area = "", addressName = article.AddressName })';">
                <div class="panel-heading">
                        <h4 class="panel-title">
                                @article.Title
            </h4>
        </div>
                <div class="panel-body">
                        @Html.Raw(ParserSingletone.ToHtml(article.Body.Substring(0, Math.Min(article.Body.Length, 100))) + "...")
            
        </div>
                <div class="panel-footer">
                        Автор: Аноним
        </div>
    </div>
   }
</div>